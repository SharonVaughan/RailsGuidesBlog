<h1>Listing of articles</h1>

<%= link_to 'New article', new_article_path %></br>
<%= link_to 'Home', root_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  <tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
    </tr>
  <% end %>
</table>